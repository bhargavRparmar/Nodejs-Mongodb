<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Testimonial Page</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">



    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/ry-3jque.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="page.css">


</head>

<body>

    <h1 class="mt-8 p-2 bg-primary text-black" style="align-items: center; text-align: center;">Testimonial</h1>
    <section>
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <form action="/multiDeleteTestimonial" method="get"><br>
                        <div class="row">
                            <div class="col-md-2">
                                <a href="/showTestimonial" class="btn btn-outline-secondary">Add New Testimonial</a>
                            </div>
                            <div class="col-md-1">
                                <button class="btn btn-outline-secondary">Multi Delete</button>
                            </div>
                            <div class="col-md-1">
                                <b>Testimonial Name</b>
                            </div>
                            <div class="col-md-2">
                                <b>Designation</b>
                            </div>
                            <div class="col-md-2">
                                <b>Testimonial Description</b>
                            </div>
                            <div class="col-md-2">
                                <b>Testimonial Image</b>
                            </div>
                            <div class="col-md-2">

                            </div><br>


                            <% values.forEach((value,index)=> { %>
                                <div class="row">
                                    <div class="col-sm-1">
                                        <a href="/showEditTestimonial/<%=value._id%>"> <input class="btn btn-primary" style="margin: 0% 2%;" id="edit" type="button" value="Edit"></a>
                                    </div>
                                    <div class="col-sm-1 ">
                                        <a href="/deleteTestimonial/<%=value._id%>" method="Delete" onclick="return confirm('Are you sure you want to Delete ?')">
                                            <input class="btn btn-primary" style="margin: 0% 2%;" id="delete" type="button" value="Delete"></a>
                                    </div>
                                    <div class="col-sm-2 text-center">
                                        <label><input type="checkbox" id="multiSelect" name="<%= value._id%>"
                                                value="multiSelect"></label>
                                    </div>
                                    <div class="col-sm-2 ">
                                        <div class="form-group">
                                            <input type="text" class="form-control" name="T_Name" value="<%= value.T_Name %>" placeholder="Enter Testimonial Name">
                                        </div>
                                    </div>
                                    <div class="col-sm-2 ">
                                        <div class="form-group">
                                            <input type="Designation" class="form-control" name="designation" value="<%= value.designation %>" placeholder="Enter Designation">
                                        </div>
                                    </div>
                                    <div class="col-sm-2 ">
                                        <div class="form-group">
                                            <input type="text" class="form-control" name="T_Desc" value="<%= value.T_Desc %>" placeholder="Enter Testimonial Description">
                                        </div>
                                    </div>
                                    <div class="col-sm-2 ">
                                        <div class="form-group">

                                            <img src="/<%=value.T_Image%>" alt="No Image" width="100" height="100">
                                        </div>
                                    </div>

                                </div>
                                <% }); %>










                        </div>
                    </form>
                </div>

            </div>
        </div>
    </section>
</body>

</html>